<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activity.register.loader.LoaderRegisterAccount">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_logo_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_text1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_text1"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tv_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mohon Periksa Email Anda dan Lanjutkan Langkah Ubah Kata Sandi"
        android:contentDescription="Mohon Periksa Email Anda dan Lanjutkan Langkah Ubah Kata Sandi"
        android:paddingHorizontal="32dp"
        android:textAlignment="center"
        android:fontFamily="@font/opensans_semibold"
        android:textSize="14sp"
        android:textColor="@color/ColorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo"/>

    <Button
        android:id="@+id/btn_back_register_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:contentDescription="Tombol Kembali"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_text1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/ColorPrimary"
        android:fontFamily="@font/opensans_semibold"
        android:textSize="16sp"
        android:padding="16dp"
        android:background="@drawable/shape_button"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>