<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.transfer.transferNow">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:navigationIcon="@drawable/baseline_arrow_back_24"
            app:title="Transfer ke Rekening BCA"
            app:titleTextColor="@color/white"
            app:titleTextAppearance="@style/ToolbarTitleText" />
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/tv_tujuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tujuan Transfer"
        android:fontFamily="@font/opensans_bold"
        android:textSize="16sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Charina Lorenza Raharjo"
        android:textColor="@color/ColorPrimary"
        android:fontFamily="@font/opensans_bold"
        android:textSize="18sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_tujuan"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_bca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BCA"
        android:fontFamily="@font/opensans_semibold"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_rekening"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123456789"
        android:fontFamily="@font/opensans_regular"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_bca"
        app:layout_constraintStart_toStartOf="parent"/>

    <CheckBox
        android:id="@+id/cb_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:button="@drawable/custom_checkbox"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/opensans_semibold"
        android:textSize="14sp"
        android:textColor="@color/ColorPrimary"
        android:text="Simpan ke Daftar Favorit"
        app:layout_constraintTop_toBottomOf="@id/tv_rekening"/>

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rekening Sumber"
        android:fontFamily="@font/opensans_semibold"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/cb_save"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_rekening_sumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tahapan (1201010011)"
        android:fontFamily="@font/opensans_regular"
        android:textSize="14sp"
        android:paddingHorizontal="14dp"
        android:paddingVertical="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_label"
        app:layout_constraintTop_toBottomOf="@id/tv_text"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_saldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saldo: IDR 150,251,000.00"
        android:fontFamily="@font/opensans_semibold"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_rekening_sumber"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_nominal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nominal Transfer"
        android:fontFamily="@font/opensans_semibold"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_saldo"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_nominal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:hint="IDR 0"
        android:textColorHint="@color/black"
        android:fontFamily="@font/opensans_bold"
        app:layout_constraintTop_toBottomOf="@id/tv_nominal"/>

    <TextView
        android:id="@+id/tv_catatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catatan (Opsional)"
        android:fontFamily="@font/opensans_semibold"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/et_nominal"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_catatan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:hint="Masukkan catatan"
        android:background="@color/light_primary"
        android:paddingVertical="12dp"
        android:paddingHorizontal="14dp"
        android:maxLength="40"
        android:fontFamily="@font/opensans_regular"
        app:layout_constraintTop_toBottomOf="@id/tv_catatan"/>

    <TextView
        android:id="@+id/tv_waktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waktu Transfer"
        android:fontFamily="@font/opensans_semibold"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_catatan"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/linear_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_waktu"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioGroup
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp">

            <RadioButton
                android:id="@+id/rb_sekarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@android:color/transparent"
                android:background="@drawable/radio_selector"
                android:padding="8dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="@drawable/text_color"
                android:text="Sekarang"/>

            <RadioButton
                android:id="@+id/rb_atur_tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@android:color/transparent"
                android:background="@drawable/radio_selector"
                android:padding="8dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="@drawable/text_color"
                android:text="Atur Tanggal"/>
        </RadioGroup>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnChoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Tanggal dan Waktu"
        android:contentDescription="Tombol pilih tanggal dan waktu"
        app:cornerRadius="8dp"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/shape_button_outline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_rg"
        />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/ColorPrimary"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Lanjut"
        android:fontFamily="@font/opensans_semibold"
        android:textSize="16sp"
        android:background="@drawable/shape_button"
        app:layout_constraintTop_toBottomOf="@id/btnChoose" />

</androidx.constraintlayout.widget.ConstraintLayout>