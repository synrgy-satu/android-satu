                        android:id="@+id/tvAccountEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:text="@string/email"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
